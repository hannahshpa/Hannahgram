<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfilePic"
        app:srcCompat="@android:color/black" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivProfilePic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/profilepic" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/roboto"
        android:text="username" />

    <ImageView
        android:id="@+id/ivShare"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_alignTop="@+id/tvUsername"
        android:layout_toStartOf="@+id/ivSave"
        app:srcCompat="@drawable/media_option_button" />

    <ImageButton
        android:id="@+id/ivComment"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/ivHeart"
        android:layout_marginEnd="-67dp"
        android:layout_toStartOf="@+id/tvUsername"
        android:adjustViewBounds="true"

        android:background="@color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageButton
        android:id="@+id/ivHeart"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignStart="@+id/ivPhoto"
        android:layout_below="@+id/ivPhoto"
        android:adjustViewBounds="true"
        android:layout_marginTop="5dp"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:layout_marginLeft="5dp"

        app:srcCompat="@drawable/switch_heart_button" />

    <ImageButton
        android:id="@+id/ivDirect"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/ivComment"
        android:layout_marginStart="77dp"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/direct" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivComment"
        android:ems="10"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:fontFamily="@font/roboto"
        android:inputType="textMultiLine"
        android:text="This is my caption"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/ivSave"
        android:layout_width="15dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/ivDirect"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/ufi_save"
        android:tint="@color/black" />

    <android.support.design.widget.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="start"
        app:menu="@menu/bottom_nav_bar" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivComment"
        android:layout_toStartOf="@+id/ivShare"
        android:fontFamily="@font/roboto"
        android:gravity="right"
        android:text="Created At" />

</RelativeLayout>