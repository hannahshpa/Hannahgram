<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
android:background="@android:color/transparent"
tools:context=".LoginActivity">


    <TextView
        android:id="@+id/letters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/instagram"
        android:contentDescription="background"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/username_et"
        android:layout_width="326dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="169dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="   Username"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:textColor="@color/white"
        android:background="#33cccccc"
        android:textColorHint="#D0CBCB"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/or"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp"
        android:ems="10"
        android:fontFamily="@font/roboto_thin"
        android:inputType="textPersonName"
        android:text="Forgot your login details?"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/help"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/username_et"
        android:layout_alignTop="@+id/forgot"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:fontFamily="@font/roboto_thin"
        android:text="Get help signing in."
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="151dp"
        android:fontFamily="@font/roboto_thin"
        android:text="----------------------------- OR -----------------------------"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/password_et"
        android:layout_width="326dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="237dp"
        android:background="#33cccccc"
        android:fontFamily="@font/roboto"
        android:hint="   Password"
        android:inputType="textPassword"
        android:selectAllOnFocus="false"
        android:textColor="@color/white"
        android:textColorHint="#D0CBCB"
        android:textSize="14sp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="215dp"
        android:background="@drawable/shape_view_border"
        android:fontFamily="@font/roboto"
        android:text="Log In"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="visible"
        tools:clickable="true" />

    <TextView
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/shape_view_border"
        android:fontFamily="@font/roboto_thin"
        android:gravity="center"
        android:text="Don't have an account?              "
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:background="@drawable/shape_view_border"
        android:clickable="true"
        android:fontFamily="@font/roboto"
        android:text="Sign up"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible" />

<ImageView
    android:id="@+id/logo"
    android:layout_width="216dp"
    android:layout_height="91dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="52dp"
    app:srcCompat="@drawable/letters" />


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="38dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/forgot"
        android:layout_marginStart="92dp"
        app:srcCompat="@drawable/facebook_logo_white" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="164dp"
        android:layout_height="31dp"
        android:layout_below="@+id/forgot"
        android:layout_toEndOf="@+id/imageView5"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Log in with Facebook"
        android:textColor="@android:color/white" />

</RelativeLayout>