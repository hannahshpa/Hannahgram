<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/letters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/instagram"
        android:contentDescription="background"
        android:textSize="10sp" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="111dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:tint="@color/white"
        android:layout_marginTop="46dp"
        app:srcCompat="@drawable/instagram_user_outline_24" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="315dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="#33cccccc"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="   Enter a username"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="#D0CBCB" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="315dp"
        android:layout_height="43dp"
        android:layout_alignStart="@+id/etUsername"
        android:layout_centerVertical="true"
        android:background="#33cccccc"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="   Enter a password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="#D0CBCB" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="319dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/etUsername"
        android:layout_marginBottom="170dp"
        android:background="#33cccccc"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:hint="   Enter your email"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="false"
        android:textColor="@color/white"
        android:textColorHint="#D0CBCB" />

    <Button
        android:id="@+id/create_btn"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="91dp"
        android:background="@drawable/shape_view_border"
        android:clickable="true"
        android:fontFamily="@font/roboto"
        android:text="Get me on Hannahgram!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="35dp"
        android:layout_marginLeft="5dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/etUsername"
        android:background="@color/transparent"
        android:onClick="returnLogin"
        app:srcCompat="@drawable/ic_arrow_back_white_24dp" />
</RelativeLayout>